#!/bin/bash
usage()
{
cat << EOF
usage: $0 options <appname>
OPTIONS:
   -h      Show this message
   -v      Verbose 
EOF
}
MASTER='127.0.0.1:3000'
VERSION=$(cat version.sbt |sed 's/^.*"\(.*\)"$/\1/')
while getopts “hvm:” OPTION
do
     case "${OPTION}" in
         h)
             usage
             exit 1
             ;;
         m)
             MASTER=$OPTARG
             ;;
         v)
             VERBOSE=true
             ;;
         ?)
             usage
             exit
             ;;
     esac
done
shift $((OPTIND-1))
if [ $# = 0 ]; then
  usage
  exit 1
fi
if [ ! -z $VERBOSE ]; then
  echo $*
fi
case "$1" in 
  complexdag)
    echo target/pack/bin/gear app -jar ./examples/streaming/${1}/target/scala-2.11/gearpump-examples-${1}_2.11-${VERSION}.jar org.apache.gearpump.streaming.examples.${1}.Dag -master $MASTER
    target/pack/bin/gear app -jar ./examples/streaming/${1}/target/scala-2.11/gearpump-examples-${1}_2.11-${VERSION}.jar org.apache.gearpump.streaming.examples.${1}.Dag -master $MASTER
    ;;
  wordcount)
    echo target/pack/bin/gear app -jar ./examples/streaming/${1}/target/scala-2.11/gearpump-examples-${1}_2.11-${VERSION}.jar org.apache.gearpump.streaming.examples.${1}.WordCount -master $MASTER
    target/pack/bin/gear app -jar ./examples/streaming/${1}/target/scala-2.11/gearpump-examples-${1}_2.11-${VERSION}.jar org.apache.gearpump.streaming.examples.${1}.WordCount -master $MASTER
    ;;
  fsio)
    echo target/pack/bin/gear app -jar ./examples/streaming/${1}/target/scala-2.11/gearpump-examples-${1}_2.11-${VERSION}.jar org.apache.gearpump.streaming.examples.${1}.SequenceFileIO -master $MASTER
    target/pack/bin/gear app -jar ./examples/streaming/${1}/target/scala-2.11/gearpump-examples-${1}_2.11-${VERSION}.jar org.apache.gearpump.streaming.examples.${1}.SequenceFileIO -master $MASTER
    ;;
  pipeline)
    echo target/pack/bin/gear app -jar ./experiments/${1}/target/scala-2.11/gearpump-experiments-${1}-assembly-${VERSION}.jar org.apache.gearpump.experiments.pipeline.PipeLine -master $MASTER
    target/pack/bin/gear app -jar ./experiments/${1}/target/scala-2.11/gearpump-experiments-${1}-assembly-${VERSION}.jar org.apache.gearpump.experiments.pipeline.PipeLine -master $MASTER
#    echo target/pack/bin/gear app -jar ./experiments/${1}/target/scala-2.11/gearpump-experiments-${1}_2.11-${VERSION}.jar org.apache.gearpump.experiments.pipeline.PipeLine -master $MASTER
#    target/pack/bin/gear app -jar ./experiments/${1}/target/scala-2.11/gearpump-experiments-${1}_2.11-${VERSION}.jar org.apache.gearpump.experiments.pipeline.PipeLine -master $MASTER
    ;;
  sol)
    echo target/pack/bin/gear app -jar ./examples/streaming/${1}/target/scala-2.11/gearpump-examples-${1}_2.11-${VERSION}.jar org.apache.gearpump.streaming.examples.${1}.SOL -master $MASTER
    target/pack/bin/gear app -jar ./examples/streaming/${1}/target/scala-2.11/gearpump-examples-${1}_2.11-${VERSION}.jar org.apache.gearpump.streaming.examples.${1}.SOL -master $MASTER
    ;;
  kafkawordcount)
    echo target/pack/bin/gear app -jar ./examples/streaming/${1}/target/scala-2.11/gearpump-examples-${1}_2.11-${VERSION}.jar org.apache.gearpump.streaming.examples.kafka.wordcount.KafkaWordCount -master $MASTER
    target/pack/bin/gear app -jar ./examples/streaming/${1}/target/scala-2.11/gearpump-examples-${1}_2.11-${VERSION}.jar org.apache.gearpump.streaming.examples.kafka.wordcount.KafkaWordCount -master $MASTER
    ;;
  ?)
    usage
    exit
    ;;
esac
